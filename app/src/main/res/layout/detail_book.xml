<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="20dp">

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/detailImageBook"
                android:layout_width="80dp"
                android:layout_height="60dp"
                >
            </androidx.appcompat.widget.AppCompatImageView>

            <TextView
                android:id="@+id/LabelTitle"
                android:text="Title:"
                android:layout_toRightOf="@+id/detailImageBook"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/detailtitle"
                android:text="titulo default"
                android:layout_toRightOf="@+id/detailImageBook"
                android:layout_below="@+id/LabelTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                />

            <TextView
                android:id="@+id/LabelAuthor"
                android:text="Author:"
                android:layout_below="@+id/detailImageBook"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="5dp"
                android:textStyle="bold"
                />
            <TextView
                android:id="@+id/detailauthor"
                android:text="author"
                android:layout_below="@+id/LabelAuthor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"/>

            <TextView
                android:id="@+id/LabelCategory"
                android:text="Category:"
                android:textStyle="bold"
                android:layout_below="@+id/detailauthor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"/>

            <TextView
                android:id="@+id/detailcategory"
                android:text="category"
                android:layout_below="@+id/LabelCategory"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"/>

            <TextView
                android:id="@+id/LabelDesc"
                android:text="Description:"
                android:textStyle="bold"
                android:layout_below="@+id/detailcategory"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"/>
            <TextView
                android:id="@+id/detailDesc"
                android:text="desc"
                android:layout_below="@+id/LabelDesc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"/>

            <TextView
                android:id="@+id/LabelPublication"
                android:text="Publication date:"
                android:textStyle="bold"
                android:layout_below="@+id/detailDesc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"/>
            <TextView
                android:id="@+id/DetailPublication"
                android:text="Publication date:"
                android:layout_below="@+id/LabelPublication"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"/>
            <TextView
                android:id="@+id/LabelIsbn"
                android:text="Isbn:"
                android:textStyle="bold"
                android:layout_below="@+id/DetailPublication"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"/>

            <TextView
                android:id="@+id/DetailIsbn"
                android:text=""
                android:layout_below="@+id/LabelIsbn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"/>

            <TextView
                android:id="@+id/LabelPages"
                android:text="Pages:"
                android:textStyle="bold"
                android:layout_below="@+id/DetailIsbn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"/>

            <TextView
                android:id="@+id/DetailPages"
                android:text=""
                android:layout_below="@+id/LabelPages"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"/>



        </RelativeLayout>

    </androidx.core.widget.NestedScrollView>



</LinearLayout>